@using Microsoft.AspNetCore.Identity
@using FirstProject_MVC.Models.Entity
@inject UserManager<User> userManager
@model List<User>
Danh sách các Role
<a asp-action="Add" asp-controller="Role" asp-area="Admin" class="btn btn-primary">Tạo mới</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Tên</th>
            <th scope="col">Role</th>
            <th scope="col">Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <th scope="row">@user.UserName</th>
                <td>@string.Join(",", userManager.GetRolesAsync(user))</td>
                <td>
                    <a asp-action="Update" asp-route-id="@user.Id" asp-controller="User" asp-area="Admin">Cập nhật</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" asp-controller="User" asp-area="Admin">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>